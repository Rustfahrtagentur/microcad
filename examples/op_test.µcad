
op a(x: Scalar) { @input }
op b() { @input }

op c(x: [Scalar]) {
    @input.a(x).b()
}

sketch D() { }

// Call D()
// call a()
// call b()


// b
//   a(1.0)
//     D
D().a(1.0).b();


// b
//   a(2.0)
//     D
//   a(3.0)
//     D
D().a([2.0, 3.0]).b();



// c([4.0, 5.0])
//    b
//       a(4.0)
//          D
//       a(5.0)
//          D
D().c([4.0, 5.0]).c([6.0]);

