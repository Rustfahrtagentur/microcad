use __builtin::*;

// The part `cyl` creates a cylinder with the given diameter and height
part cyl(d: Length, h: Length) {
    geo3d::Cylinder(
        radius_bottom = d * 2.0 / 1mm,
        radius_top = d * 2.0 / 1mm,
        height = h / 1mm
    )
}

// Calculate the difference between two translated cylinders
thickness = 1.6mm;
inner_diameter = 8.0cm;
outer_diameter = 2.0 * thickness + inner_diameter;
height = 20.0mm;
print("{thickness} {inner_diameter} {outer_diameter} {height}");

outer = cyl(d = outer_diameter, h = height);
inner = cyl(d = inner_diameter, h = height).ops::translate(x = 0.0, y = 0.0, z = thickness / 1mm);
 
outer - inner;
