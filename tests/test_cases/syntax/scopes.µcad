a = 1;

__builtin::assert_valid(a);
__builtin::assert_invalid(b);
__builtin::assert_invalid(c);

{
    __builtin::assert_valid(a);
    __builtin::assert_invalid(b);
    __builtin::assert_invalid(c);

    b = 2;

    __builtin::assert_valid(a);
    __builtin::assert_valid(b);
    __builtin::assert_invalid(c);

    c = 3;

    __builtin::assert_valid(a);
    __builtin::assert_valid(b);
    __builtin::assert_valid(c);
}

__builtin::assert_valid(a);
__builtin::assert_invalid(b);
__builtin::assert_invalid(c);

// remove me
__builtin::assert_valid(x);
