// Integer + Scalar Arithmetic
a = 2.0;
std::assert(a == 2.0);
b = 2 * a;
std::assert(b == 4.0);
c = a / 2;
std::assert(c == 1.0);

// Length arithmetic
a = 2.0mm;
std::assert([a, 2mm, 2.0mm].equal());
b = 2 * a;
std::assert([b, 4mm, 4.0mm].equal());
c = a / 2;
std::assert([c, 1mm, 1.0mm].equal());

// List arithmetic
a = [1, 2, 3];
std::assert(a == [1, 2, 3]);
b = 2 * a;
std::assert(b == [2, 4, 6]);
c = a / 2;
std::assert(c == [0.5, 1.0, 1.5]);
