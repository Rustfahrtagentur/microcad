use __builtin::*;

// Define a part `circle_difference` with a radius as a parameter
// If creates an operation node with a circle node as a child
// The `@children` marker is used to display that all children of the part will be added to the operation node
part circle_difference(radius: Scalar) {
    ops::difference() {
        geo2d::circle(radius);
        @children
    }
}

// Create a circle node with two children
a = geo2d::circle(1.0) {
    geo2d::circle(2.0);
    geo2d::circle(3.0);
};

// Create a circle_difference node with three children
circle_difference(4.0) {
    geo2d::circle(5.0);
    geo2d::circle([6.0, 7.0]); // Test multiplicity
    a;
}

// a is instantiated a second time, make sure nodes are deep copied
a;
