{
  "name": "microcad",
  "displayName": "µcad language support",
  "description": "µcad (microcad) language support for visual code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rustfahrtagentur/microcad"
  },
  "license": "AGPL-3.0-or-later",
  "icon": "icon.png",
  "publisher": "microcad",
  "categories": [
    "Programming Languages"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "microcad",
        "aliases": [
          "microcad",
          "µcad",
          "mcad"
        ],
        "extensions": [
          ".µcad",
          ".mcad"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "microcad",
        "scopeName": "source.microcad",
        "path": "./syntaxes/microcad.tmLanguage.json"
      },
      {
        "scopeName": "markdown.microcad.codeblock",
        "path": "./syntaxes/microcad.markdown-injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.microcad": "microcad"
        }
      }
    ]
  }
}