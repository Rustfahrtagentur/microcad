module translate(x = 0.0mm, y = 0.0mm, z = 0.0mm) {
    __builtin::transform::translate(x = x / 1mm, y = y / 1mm, z = z / 1mm) {
        @children
    }
}

module rotate(angle = 0°, x = 0.0mm, y = 0.0mm, z = 0.0mm) {
    __builtin::transform::rotate(angle / 1°, x = x / 1mm, y = y / 1mm, z = z / 1mm) {
        @children
    }
}