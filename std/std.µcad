/// ÂµCAD standard library

namespace geo2d {
    /// `circle(r = 10.0mm);`
    /// `circle(d = 5.0mm);`
    module circle {
        init(radius: length) {}

        init(r: length) {
            radius = r;
        }

        init(diameter: length) {
            radius = diameter / 2.0;
        }

        init(d: length) {
            radius = d / 2.0;
        }

        __builtin::geo2d::circle(radius / 1mm);
    }
}

